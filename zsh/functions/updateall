#!/bin/sh

updateall () {
  update_commands=(
    "(cd $DOTFILES && ./install.sh)"
    "brew update"
    "brew upgrade"
    "brew cleanup"
    "composer self-update"
    "$DOTFILES/bin/nvm-update"
    "$DOTFILES/bin/npm-yarn-global-upgrade"
    "mas upgrade"
    "(cd $HOME/.zplug && git pull && source $HOME/.zplug/init.zsh)"
    "zplug clean --force"
    "zplug update"
  )

  for i in "${update_commands[@]}"; do
    printf "\n**** Running: $i *****\n\n"
    eval ${i}
  done
}