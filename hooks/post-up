#!/bin/sh

export DOTFILES=$HOME/.dotfiles

if [ ! -e $HOME/.vim/bundle/Vundle.vim ]; then
  git clone https://github.com/gmarik/Vundle.vim.git ~/.vim/bundle/Vundle.vim
fi
git -C $HOME/.vim/bundle/Vundle.vim pull
vim -u $HOME/.vimrc.bundles +PluginInstall +qall

git -C $DOTFILES submodule update --init --recursive

if [ -e $HOME/.oh-my-zsh/custom/pure.zsh-theme ]; then
  rm $HOME/.oh-my-zsh/custom/pure.zsh-theme
fi
ln -s "$DOTFILES/zsh/pure/pure.zsh" $HOME/.oh-my-zsh/custom/pure.zsh-theme

sudo /bin/cp -RfX $(brew --prefix osxfuse)/Library/Filesystems/osxfusefs.fs /Library/Filesystems
sudo chmod +s /Library/Filesystems/osxfusefs.fs/Support/load_osxfusefs
