#!/bin/sh

sudo -v

while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

git -C $DOTFILES submodule update --init
git -C $DOTFILES submodule foreach "(git checkout master; git pull)"

export DOTFILES=~/.dotfiles

if [ ! -e ~/.config/base16-shell ]; then
  git clone git://github.com/chriskempson/base16-shell.git ~/.config/base16-shell
fi

if [ ! -e ~/.npm-packages ]; then
  mkdir ~/.npm-packages
fi

if [ ! -e ~/.zfunctions ]; then
  mkdir ~/.zfunctions
fi

if [ ! -e ~/.nvm ]; then
  git clone https://github.com/creationix/nvm.git ~/.nvm && cd ~/.nvm && git checkout `git describe --abbrev=0 --tags`
fi

if [ ! -e /usr/bin/phpbrew ]; then
  curl -L -O https://github.com/phpbrew/phpbrew/raw/master/phpbrew
  chmod +x phpbrew
  sudo mv phpbrew /usr/bin/phpbrew
  phpbrew init
  phpbrew lookup-prefix homebrew
fi

# Plug
mkdir -p ~/.vim/autoload
curl -fLo ~/.vim/autoload/plug.vim https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
